generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  username  String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name      String?
}

model Bicycle {
  id          String     @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  image       String
  gears       String
  wheelSize   String
  frameSize   String
}